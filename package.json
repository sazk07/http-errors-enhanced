{
  "name": "@sazk/http-errors-enhanced",
  "version": "0.1.1",
  "description": "Create HTTP errors with additional properties for any framework.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sazk07/http-errors-enhanced.git"
  },
  "homepage": "https://github.com/sazk07/http-errors-enhanced",
  "keywords": [
    "http",
    "errors",
    "enhanced",
    "http-errors",
    "typescript",
    "esm",
    "error-handling"
  ],
  "bugs": {
    "url": "https://github.com/sazk07/http-errors-enhanced/issues"
  },
  "author": "Shahan Arshad Khan",
  "contributors": [
    "Shogun <shogun@cowtech.it> (original author)"
  ],
  "license": "ISC",
  "private": false,
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "lint": "eslint --cache",
    "lint:fix": "eslint --cache --fix",
    "typecheck": "tsc -p . --noEmit",
    "test": "tsx --test test/*.test.ts",
    "test:ci": "tsx --test-reporter=tap --test test/*.test.ts",
    "ci": "npm run typecheck && npm run lint && npm run build && npm run test:ci",
    "prepublishOnly": "npm run ci",
    "postpublish": "git push origin --follow-tags"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/http-errors": "^2.0.4",
    "@types/node": "^24.1.0",
    "eslint": "^9.32.0",
    "http-errors": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "peerDependencies": {
    "http-errors": ">=2.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 22.17.0"
  }
}
